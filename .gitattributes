# Auto-detect text files and normalize line endings
* text=auto

# Enforce LF for code files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Enforce LF for shell scripts (important for deployment)
*.sh text eol=lf

# Windows batch scripts can keep CRLF
*.bat text eol=crlf
